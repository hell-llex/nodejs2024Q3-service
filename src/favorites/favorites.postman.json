{
  "info": {
    "name": "Favorites API",
    "_postman_id": "e7a9b36c-2c5a-4a3b-9537-1d5fcd8b7bc3",
    "description": "Collection for testing favorites-related API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Favorites",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/favorites",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "favorites"
          ]
        }
      }
    },
    {
      "name": "Add Track to Favorites",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/favorites/track/{{trackId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "favorites",
            "track",
            "{{trackId}}"
          ]
        },
        "description": "Добавить трек в избранное"
      }
    },
    {
      "name": "Add Album to Favorites",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/favorites/album/{{albumId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "favorites",
            "album",
            "{{albumId}}"
          ]
        },
        "description": "Добавить альбом в избранное"
      }
    },
    {
      "name": "Add Artist to Favorites",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/favorites/artist/{{artistId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "favorites",
            "artist",
            "{{artistId}}"
          ]
        },
        "description": "Добавить артиста в избранное"
      }
    },
    {
      "name": "Remove Track from Favorites",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/favorites/track/{{trackId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "favorites",
            "track",
            "{{trackId}}"
          ]
        },
        "description": "Удалить трек из избранного"
      }
    },
    {
      "name": "Remove Album from Favorites",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/favorites/album/{{albumId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "favorites",
            "album",
            "{{albumId}}"
          ]
        },
        "description": "Удалить альбом из избранного"
      }
    },
    {
      "name": "Remove Artist from Favorites",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/favorites/artist/{{artistId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "favorites",
            "artist",
            "{{artistId}}"
          ]
        },
        "description": "Удалить артиста из избранного"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000/api"
    },
    {
      "key": "trackId",
      "value": ""
    },
    {
      "key": "albumId",
      "value": ""
    },
    {
      "key": "artistId",
      "value": ""
    }
  ]
