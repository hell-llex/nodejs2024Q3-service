  "item": [
    {
      "name": "Get All Albums",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/album",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "album"
          ]
        }
      }
    },
    {
      "name": "Get Album by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/album/{{albumId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "album",
            "{{albumId}}"
          ]
        }
      }
    },
    {
      "name": "Create Album",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/album",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "album"
          ]
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"New Album\",\n    \"artistId\": null,\n    \"albumId\": null,\n    \"duration\": 180\n}"
        }
      }
    },
    {
      "name": "Update Album",
      "request": {
        "method": "PUT",
        "url": {
          "raw": "{{baseUrl}}/album/{{albumId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "album",
            "{{albumId}}"
          ]
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Updated Album Name\",\n    \"artistId\": \"some-artist-id\",\n    \"albumId\": \"some-album-id\",\n    \"duration\": 200\n}"
        }
      }
    },
    {
      "name": "Delete Album",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/album/{{albumId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "album",
            "{{albumId}}"
          ]
        }
      }
    }
  ],
  "variable": [
